{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "textures": {
      "type": "object",
      "required": ["flat"],
      "properties": {
        "flat": {
          "type": "object",
          "properties": {
            "category": { "type": "string" },
            "name": { "type": "string" },
            "author": { "type": "string" }
          },
          "required": ["author"],
          "additionalProperties": false
        }
      },
      "patternProperties": {
        "^[a-z0-9_]+$": {
          "type": "object",
          "properties": {
            "category": { "type": "string" },
            "name": { "type": "string" },
            "author": { "type": "string" },
            "variants": {
              "type": "object",
              "minProperties": 1,
              "patternProperties": {
                "^[a-z0-9_]+$": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "author": { "type": "string" }
                  },
                  "additionalProperties": false
                }
              }
            }
          },
          "required": ["author"],
          "additionalProperties": false
        }
      }
    },
    "overlays": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[a-z0-9_]+$": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "author": { "type": "string" }
          },
          "required": ["author"],
          "additionalProperties": false
        }
      }
    }
  },
  "required": ["textures", "overlays"],
  "additionalProperties": false
}